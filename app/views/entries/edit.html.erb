<h1> Edit Your Entry </h1>


<%= form_with model: @entry do |f| %>
    <%= f.label :Category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %><br>
    <br>
    <%= f.label :details %>
    <%= f.text_field :details %><br>

        <br>
    
    <%= f.label :amount %>
    <%= f.number_field :amount %><br>
    <br>
    <%= f.label :month %>
    <%= f.text_field :month %><br>

        <br><br>
    
    <%= f.submit "submit" %>
<% end %>