
<div class="main">

<%= form_tag(search_entries_path, method: "get") do %>
    <%= label_tag(:search_term, "Search for:") %>
    <%= text_field_tag(:search_term) %>
    <%= submit_tag("Search") %>
  <% end %>
 

<h1> Your Entries </h1>
<% @entries.each do |e| %>
    <b>Details:</b><%= link_to e.details, category_entries_path(e)%>
    <br> <b>Amount:</b> <i>$<%= e.amount %></i>, <b>Month:</b> <%= e.month %><br>
     <br><br >
    <% end %>
 </div>
 